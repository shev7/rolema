{
  "compilerOptions": {
    "paths": {
      "@actions/*": ["./lib/utils/actions/*"],
      "@api/*": ["./lib/api/*"],
      "@components/*": ["./lib/components/*"],
      "@pages/*": ["./lib/pages/*"],
      "@queries/*": ["./lib/utils/queries/*"],
      "@utils/*": ["./lib/utils/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "exclude": ["node_modules"],
  "extends": "@repo/typescript-config/nextjs.json",
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ]
}
